<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".UssdFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:orientation="horizontal"
        android:paddingVertical="6dp"
        android:layout_marginStart="10dp">
        <ImageView
            android:id="@+id/ussd_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/back"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="USSD kodlar"
            android:layout_marginStart="12dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/white"
            android:textSize="18sp"/>



    </LinearLayout>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:backgroundTint="@color/white"
    android:background="@drawable/white_rounded_back"
    >
<ExpandableListView
    android:id="@+id/expandable_list_ussd"
    android:layout_width="match_parent"
    android:groupIndicator="@null"
    android:divider="@color/black"
    android:layout_height="match_parent"
    android:indicatorEnd="?android:attr/expandableListPreferredItemIndicatorRight"/>

</LinearLayout>

</LinearLayout>